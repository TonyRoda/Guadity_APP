<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FourthFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/fondo_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="770dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="414dp"
            android:layout_height="770dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="410dp"
                android:layout_height="60dp"
                android:layout_marginTop="45dp"
                android:gravity="center"
                android:text="Guardity"
                android:textColor="@color/celeste"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="165dp"
                android:layout_marginTop="0dp"
                android:text="Soporte"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="60dp"
                android:text="Preguntas Frecuentes y Soporte"
                android:textColor="@color/azul"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="¿Qué es Guardity?"
                android:textColor="@color/celeste"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="344dp"
                android:layout_height="29dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="Es una aplicación de rastreo de dispositivos móviles"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="¿Cómo funciona Guardity?"
                android:textColor="@color/celeste"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="354dp"
                android:layout_height="95dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="12dp"
                android:text="Es un servicio freemium que consta de un agente en tus dispositivos y un servicio web que maneja la información que recopila por ti. Podrás administrar la aplicación desde tu cuenta Guardity siempre que tu dispositivo se conecte con nuestros servidores"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="54dp"
                android:layout_height="56dp"
                android:layout_marginStart="320dp"
                android:layout_marginTop="20dp"
                android:background="@color/transparent"
                android:src="@drawable/mensaje_ic" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

